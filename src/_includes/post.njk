---
layout: base.njk
---

<article class="post">
    <header>
        <h1>{{ title }}</h1>
        <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
        {% if tags %}
        <ul class="tags">
            {% for tag in tags %}
            <li><a href="/tags/{{ tag }}/">{{ tag }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
